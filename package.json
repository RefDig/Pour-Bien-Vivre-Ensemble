{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=pbve-realisations --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name webapp",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:commit": "git add . && git commit -m",
    "db:init": "node init-db.js",
    "db:migrate": "wrangler d1 migrations apply pbve-realisations --local",
    "db:seed": "wrangler d1 execute pbve-realisations --local --file=./migrations/0001_create_realisations.sql",
    "db:console": "wrangler d1 execute pbve-realisations --local",
    "start": "npm run build && pm2 restart pour-bien-vivre-ensemble || pm2 start ecosystem.config.cjs"
  },
  "dependencies": {
    "hono": "^4.9.11"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}