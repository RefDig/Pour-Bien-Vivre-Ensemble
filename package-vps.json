{
  "name": "pbve-backend-vps",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend Node.js pour Pour Bien Vivre Ensemble (VPS + MySQL)",
  "main": "server-mysql.js",
  "scripts": {
    "start": "node server-mysql.js",
    "dev": "node --watch server-mysql.js",
    "build:frontend": "vite build && npm run build:css",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/static/style.css --minify",
    "build": "npm run build:frontend"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.3",
    "hono": "^4.9.11",
    "mysql2": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
